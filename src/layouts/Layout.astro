---
import Navbar from "../components/Navbar.astro";

export interface Props {
  title: string;
  class?: string;
  noNavbar?: boolean;
}

const { title, class: mainClass, noNavbar } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset=" UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Overpass:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>alzeck - {title}</title>
  </head>
  <body
    class:list={[
      "bg-neutral-50 text-neutral-900 dark:bg-neutral-900 dark:text-neutral-50",
    ]}
  >
    { !noNavbar && <Navbar /> }
    <main class:list={["relative", mainClass]}>
      <slot />
    </main>
  </body>
</html>
