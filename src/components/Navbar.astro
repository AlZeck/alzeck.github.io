---
import Logo from "../components/Logo.astro";

const currentPath = Astro.url.pathname;
const routes = [
  { path: "/", name: "home" },
  { path: "/projects", name: "projects" },
  { path: "/blog", name: "blog" },
];
---

<div
  class="fixed inset-x-0 top-0 bg-neutral-50/75 dark:bg-neutral-900/75 backdrop-blur-lg py-3 sm:py-5 z-10"
>
  <div
    class="grid sm:grid-cols-3 gap-2 text-xl sm:text-2xl mx-10 lg:mx-auto max-w-screen-md lg:max-w-screen-lg items-center"
  >
    <div class="text-2xl sm:text-3xl flex justify-center sm:justify-start">
      <a
        class="font-medium text-neutral-500 hover:black dark:text-neutral-300 dark:hover:text-white"
        href="/"
      >
        <Logo
          class="h-8 sm:h-10 text-neutral-500 hover:text-black dark:text-neutral-300 dark:hover:text-white"
        />
      </a>
    </div>

    <nav
      class="sm:col-span-2 lg:col-span-1 lg:mx-auto sm:w-fit grid grid-cols-3 leading-none"
    >
      {
        routes.map(({ path, name }) => (
          <a
            class:list={{
              "p-2 justify-center rounded items-center flex": true,
              "hover:text-black text-neutral-400 dark:text-neutral-500 dark:hover:text-white":
                currentPath !== path,
              "text-green-500": currentPath === path,
            }}
            href={path}
          >
            {name}
          </a>
        ))
      }
    </nav>
  </div>
</div>
